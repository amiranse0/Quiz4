<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_nav.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.quiz4.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_userDBFragment"
            app:destination="@id/userDBFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.quiz4.ui.detail.DetailFragment"
        android:label="DetailFragment" >
        <argument
            android:name="userDetail"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/userDBFragment"
        android:name="com.example.quiz4.ui.dbui.UserDBFragment"
        android:label="UserDBFragment" >
        <action
            android:id="@+id/action_userDBFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/userDBFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>